---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={`${frontmatter.title} - Adam Parsons`}>
  <Header />
  <main>
    <h1>{frontmatter.title}</h1>
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style>
  main {
    flex: 1;
    padding: var(--space-16);
    max-width: 800px;
    margin: 0 auto;

    img {
      max-width: 100%;
      margin-top: var(--space-16);
      margin-bottom: var(--space-16);
    }

    h1 {
      margin-top: var(--space-8);
      margin-bottom: var(--space-32);
    }

    h2 {
      margin-top: var(--space-64);
      margin-bottom: var(--space-16);
    }

    h3 {
      font-size: var(--font-size-20);
      font-weight: bold;
      margin-top: var(--space-32);
      margin-bottom: var(--space-4);
    }

    p {
      font-size: var(--font-size-20);
      color: var(--grey700);
      margin-bottom: var(--space-16);
    }

    pre {
      margin-top: var(--space-16);
      margin-bottom: var(--space-16);
    }

    blockquote {
      margin-top: var(--space-32);
      margin-bottom: var(--space-32);

      p {
        color: var(--grey700);
        font-style: italic;
      }
    }

    a {
      color: inherit;
      transition: background-color 0.25s;
      box-shadow: inset 0 -0.175em white, inset 0 -0.22em #4a5568;
    transition: color 0.2s ease-in, box-shadow 0.2s ease-in;
    :hover {
      color: #4e97d0;
      box-shadow: inset 0 -0.175em white, inset 0 -0.22em #4e97d0;
      }
    }

    .video {
      margin-top: var(--space-64);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .video-container {
      position: relative;
      padding-bottom: 56.25%;
      padding-top: 30px;
      height: 0;
      overflow: hidden;
    }
  }
</style>